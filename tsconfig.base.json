{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@projects/alert": ["libs/alert/src/index.ts"],
      "@projects/button": ["libs/button/src/index.ts"],
      "@projects/card": ["libs/card/src/index.ts"],
      "@projects/checkbox": ["libs/checkbox/src/index.ts"],
      "@projects/checkbox-in-dropdown": ["libs/checkbox-in-dropdown/src/index.ts"],
      "@projects/common": ["libs/common/src/index.ts"],
      "@projects/dialog": ["libs/dialog/src/index.ts"],
      "@projects/dropdown": ["libs/dropdown/src/index.ts"],
      "@projects/icons": ["libs/icons/src/index.ts"],
      "@projects/image": ["libs/image/src/index.ts"],
      "@projects/input": ["libs/input/src/index.ts"],
      "@projects/label": ["libs/label/src/index.ts"],
      "@projects/my-plugin": ["libs/my-plugin/src/index.ts"],
      "@projects/radio": ["libs/radio/src/index.ts"],
      "@projects/reporting": ["apps/reporting/app/page.tsx"],
      "@projects/textarea": ["libs/textarea/src/index.ts"],
      "@projects/toggle": ["libs/toggle/src/index.ts"],
      "@projects/tooltip": ["libs/tooltip/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
